@model Kladionica.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Participent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Participent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OutcomeGame)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Game</th>
                    <th>Expected Result</th>
                    <th>Coefficients</th>
                    <th>Special Offer</th>
                    <th>Winning Outcome</th>
                </tr>
                @foreach (var item in Model.OutcomeGame)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Game)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedResult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coefficients)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialOffer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WinningOutcome)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UserID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
