@model Kladionica.Models.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedOutcome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payment)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OutcomeGame)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Game</th>
                    <th>Expected Result</th>
                    <th>Coefficients</th>
                    <th>Special Offer</th>
                    <th>Winning Outcome</th>
                </tr>
                @foreach (var item in Model.SelectedOutcome)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Outcome)
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SelectedOutcome">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
